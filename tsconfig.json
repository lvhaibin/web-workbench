{
    "version": "2.4.2",
    "compilerOptions": {
        "incremental": true,
        "target": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "module": "esnext",
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
